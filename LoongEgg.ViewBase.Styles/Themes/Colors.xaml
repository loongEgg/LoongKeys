<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 
         微信: InnerGeeker
         微信 / B站: 香辣恐龙蛋
    -->
    
    <!-- Button Default -->
    <SolidColorBrush x:Key="xForeground.ButtonDefault"   Color="Black"/>
    <SolidColorBrush x:Key="xBackground.ButtonDefault"   Color="Transparent" />
    <SolidColorBrush x:Key="xBorderBrush.ButtonDefault"  Color="Black" />

    <!-- Button Enabled -->
    <SolidColorBrush x:Key="xForeground.ButtonIsEnabled"   Color="Blue"/>
    <SolidColorBrush x:Key="xBackground.ButtonIsEnabled"   Color="Yellow" />
    <SolidColorBrush x:Key="xBorderBrush.ButtonIsEnabled"  Color="Blue" /> 

    <!-- Button UnEnabled --> 
    <SolidColorBrush x:Key="xForeground.ButtonUnEnabled"  Color="Gray" />
    <SolidColorBrush x:Key="xBackground.ButtonUnEnabled"  Color="White" />
    <SolidColorBrush x:Key="xBorderBrush.ButtonUnEnabled" Color="Gray" />

    <SolidColorBrush x:Key="xForeground.TextDefault"  Color="White" />

    <SolidColorBrush x:Key="xForeground.Title"    Color="White" />
    <!-- 像这样定义一个自定义的颜色 -->
    <Color x:Key="xBackgroundColor.Title">#FF226CEE</Color>
    <SolidColorBrush x:Key="xBackground.Title" Color="{StaticResource xBackgroundColor.Title}" />

</ResourceDictionary>




